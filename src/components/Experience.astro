---
import GithubIcon from "./icons/GithubIcon.astro"
import LinkedinIcon from "./icons/LinkedinIcon.astro"
import EarthIcon from "./icons/EarthIcon.astro"

const socialMedia = [
  {
    name: "GitHub",
    url: "https://github.com",
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/search/results/all/?fetchDeterministicClustersOnly=true&heroEntityKey=urn%3Ali%3Aorganization%3A101669482&keywords=synera&origin=RICH_QUERY_SUGGESTION&position=0&searchId=e77563a9-4645-4bbe-ad6e-cba5f98a74c6&sid=i2%3B&spellCorrectionEnabled=false",
  },
  {
    name: "Website",
    url: "https://synera.vercel.app/",
  },
]
---

<section id="Skills" class="w-full h-max flex items-center justify-center">
  <div
    class="w-[70%] h-full flex items-start justify-center flex-col gap-12 xxl:w-[95%] ms:items-center"
  >
    <div class="w-full h-max flex items-center justify-start ms:justify-center">
      <h3 class="text-white/80 text-3xl font-medium mt-28">
        My <span class="text-primary">experience</span>
      </h3>
    </div>
    <section class="w-full h-max flex items-center justify-center flex-row">
      <div class="w-1/3 h-full flex items-start justify-center flex-col">
        <div class="flex flex-col items-center">
          <div class="flex flex-row items-center">
            <span class="w-4 h-4 border-[2px] border-primary rounded-full"
            ></span>
            <small class="absolute text-white/70 text-base ml-6 ls:text-sm"
              >February 2024</small
            >
          </div>
          <span class="w-[1px] h-[414px] bg-primary"></span>
          <div class="flex flex-row items-center">
            <span class="w-4 h-4 border-[2px] border-primary rounded-full"
            ></span>
            <small class="absolute text-white/70 text-base ml-6 ls:text-sm"
              >Now</small
            >
          </div>
        </div>
      </div>
      <article class="w-2/3 h-full flex items-center justify-center">
        <picture
          class="w-full h-max flex items-center justify-center flex-col bg-[#070707] rounded-md border-[1px] border-white/20 md:h-[370px] md:justify-start"
        >
          <img
            src="/banner-synera.png"
            alt="banner"
            class="rounded-t-md select-none border-b-[1px] border-b-white/20"
          />
          <div class="w-[95%] flex items-start justify-center flex-col">
            <h2 class="text-primary text-lg my-4">Synera agency</h2>
            <p
              class="text-white/70 text-sm font-light mb-3 leading-relaxed md:text-xs sm:text-[10px]"
            >
              Co-founder of Synera, a company focused on crafting exceptional
              digital experiences. <br class="hidden ls:block" /><br
                class="hidden ls:block"
              />Leading the vision and execution of innovative projects that
              translate ideas into tangible outcomes. <br
                class="hidden xs:block"
              />
              <br class="hidden xs:block" /> Committed to excellence in web development,
              design, and digital branding strategies.
            </p>
            <ul
              class="w-full h-max flex items-start justify-start flex-row my-5 gap-4 sm:mt-3 ls:mt-1 ls:mb-2"
            >
              {
                socialMedia.map((social) => (
                  <a target="_blank" href={social.url}>
                    <li class="w-10 h-10 flex items-center justify-center rounded-full bg-[#090909] border-[1px] border-white/20 group ls:mb-3">
                      {social.name === "GitHub" && <GithubIcon />}
                      {social.name === "LinkedIn" && <LinkedinIcon />}
                      {social.name === "Website" && <EarthIcon />}
                    </li>
                  </a>
                ))
              }
            </ul>
          </div>
        </picture>
      </article>
    </section>
  </div>
</section>
